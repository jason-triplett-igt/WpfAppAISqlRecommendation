<Window x:Class="SqlPerformanceAiAdvisor.RecommendationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AI Recommendation" Height="500" Width="600">
    <Grid Margin="10">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <TextBlock Text="{Binding RecommendationText}" TextWrapping="Wrap"/>
        </ScrollViewer>
        <Button Content="Close" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,10,0,0" Width="75" Click="CloseButton_Click"/>
    </Grid>
</Window>